---
import { cva, type VariantProps } from "class-variance-authority";
import { cn } from "../util";

export const buttonVariants = cva("inline-flex gap-2 text-sm font-bold w-max", {
  variants: {
    variant: {
      default: "bg-text text-background",
      secondary: "bg-primary text-text",
      outline: "bg-background text-text ring-inset ring-2 ring-outline",
      ghost: "bg-transparent text-text",
    },
    size: {
      default: "px-5 py-3",
      lg: "px-10 py-4",
    },
    roundness: {
      default: "rounded-full",
      secondary: "rounded-xl",
    },
    align: {
      center: "justify-center",
      left: "justify-start",
    },
  },
  defaultVariants: {
    variant: "default",
    size: "default",
    roundness: "default",
    align: "center",
  },
});

export interface Props
  extends astroHTML.JSX.ButtonHTMLAttributes,
    VariantProps<typeof buttonVariants> {}

const {
  class: className,
  variant,
  size,
  roundness,
  align,
  ...props
} = Astro.props;
---

<button
  class={cn(buttonVariants({ variant, size, roundness, align, className }))}
  {...props}><slot /></button
>
